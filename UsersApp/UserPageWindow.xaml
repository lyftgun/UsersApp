<Window x:Class="UsersApp.UserPageWindow"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersApp"
        mc:Ignorable="d"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Приложение для пользователей(Админ версия)" Height="450" Width="650">
    <Grid Background="Gray" Cursor="">
        <Border MinWidth="450" Background="White" VerticalAlignment="Top" Margin="20" Padding="20" MaxWidth="1920">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="Black" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Grid>
                <Button Content="Кабинет пользователя" HorizontalAlignment="Left" Width = "200" Click = "Button_account_Click"/>
                <Button Content="Панель админа" HorizontalAlignment="Right" Width="200" Click="Button_Adm"/>
                </Grid>
                <ListView x:Name="listOfUsers" Margin="10">

                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</Window>
